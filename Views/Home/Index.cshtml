
@{
    ViewData["Title"] = "Welcome to EventTicketing";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            color: #333;
        }

        .hero-section {
            background: url('https://via.placeholder.com/1920x800') no-repeat center center;
            background-size: cover;
            color: #fff;
            padding: 100px 0;
            text-align: center;
            position: relative;
        }

            .hero-section::after {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: rgba(0, 0, 0, 0.5);
                z-index: 1;
            }

            .hero-section h1 {
                font-size: 4rem;
                font-weight: 700;
                margin-bottom: 20px;
                z-index: 2;
            }

            .hero-section p {
                font-size: 1.25rem;
                z-index: 2;
            }

            .hero-section a {
                color: #ffeb3b;
                font-weight: bold;
                text-decoration: none;
                font-size: 1.25rem;
            }

                .hero-section a:hover {
                    color: #ffc107;
                }

        .container {
            position: relative;
            z-index: 2;
        }

        .features-section {
            background-color: #f8f9fa;
            padding: 60px 0;
        }

        .feature-card {
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 30px;
            text-align: center;
            margin-bottom: 30px;
            transition: transform 0.3s;
        }

            .feature-card:hover {
                transform: translateY(-10px);
            }

            .feature-card h3 {
                color: #007bff;
                font-size: 1.75rem;
                margin-bottom: 15px;
            }

            .feature-card p {
                color: #666;
                font-size: 1.1rem;
            }

        .cta-section {
            background-color: #007bff;
            color: white;
            padding: 60px 0;
            text-align: center;
        }

            .cta-section h2 {
                font-size: 2.5rem;
                margin-bottom: 20px;
            }

            .cta-section p {
                font-size: 1.25rem;
                margin-bottom: 30px;
            }

            .cta-section .btn-primary {
                background-color: #ff5722;
                border-color: #ff5722;
                font-size: 1.25rem;
                padding: 15px 30px;
            }

        .footer {
            background-color: #333;
            color: #fff;
            padding: 20px 0;
            text-align: center;
        }

            .footer p {
                margin: 0;
            }
            
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="@Url.Action("Index", "Home")">Event Ticketing</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto hide-on-home">
                <li class="nav-item">
                    <a class="nav-link" asp-action="RegisterAttendee" asp-controller="Attendee">Register As Attendee</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="RegisterEventOrganizer" asp-controller="EventOrganizer">Register As Event Organizer</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="Login" asp-controller="Authentication">Login</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="hero-section">
        <div class="container">
            <h1>Welcome to EventTicketing</h1>
            <p>Your gateway to seamless event management and ticket purchasing.</p>
            <a href="#features" class="btn btn-light">Learn More</a>
        </div>
    </div>

    <div id="features" class="container features-section">
        <div class="row">
            <div class="col-md-4">
                <div class="feature-card">
                    <h3>Effortless Event Creation</h3>
                    <p>Create and manage events with ease using our intuitive platform.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card">
                    <h3>Secure Transactions</h3>
                    <p>Experience secure and quick transactions for all your ticket purchases.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card">
                    <h3>Streamlined User Experience</h3>
                    <p>Enjoy a smooth and seamless experience with our user-friendly interface.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="cta-section">
        <div class="container">
            <h2>Ready to Get Started?</h2>
            <p>Sign up now to explore and manage your events effectively.</p>
            <a href="#" class="btn btn-primary">Get Started</a>
        </div>
    </div>

    <div class="footer">
        <p>&copy; 2024 EventTicketing. All Rights Reserved.</p>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>
</html>
