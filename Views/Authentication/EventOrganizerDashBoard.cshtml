
@{
    ViewData["Title"] = "Event Organizer Dashboard";
}

<style>
    h2 {
        font-weight: 700;
        color: #333;
    }

    .card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        background-color: #f8f9fa;
        border-radius: 15px;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
        }

    .card-title {
        font-weight: 600;
        color: #007bff;
    }

    .card-text {
        color: #555;
    }

    .btn-block {
        font-size: 1.1rem;
        padding: 10px;
        border-radius: 30px;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
        }

    .container {
        max-width: 1200px;
    }

    .mb-4 {
        margin-bottom: 1.5rem !important;
    }
</style>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2>Event Organizer Dashboard</h2>
                <form asp-action="LogOut" asp-controller="Authentication" method="post">
                    <button type="submit" class="btn btn-danger btn-lg">Logout</button>
                </form>
            </div>
            <hr />
            <div class="row">
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm border-0 rounded-lg">
                        <div class="card-body text-center">
                            <h5 class="card-title">Create Event</h5>
                            <p class="card-text">Create a new event.</p>
                            <a href="@Url.Action("CreateEvent", "Event")" class="btn btn-primary btn-block">Create Event</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm border-0 rounded-lg">
                        <div class="card-body text-center">
                            <h5 class="card-title">Manage Events</h5>
                            <p class="card-text">View and manage your events.</p>
                            <a href="@Url.Action("GetEventsByEventOrganizerId", "Event")" class="btn btn-primary btn-block">Manage Events</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm border-0 rounded-lg">
                        <div class="card-body text-center">
                            <h5 class="card-title">My Wallet</h5>
                            <p class="card-text">View and manage your wallet.</p>
                            <a href="@Url.Action("GetWallet", "Wallet")" class="btn btn-primary btn-block">My Wallet</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm border-0 rounded-lg">
                        <div class="card-body text-center">
                            <h5 class="card-title">View Profile</h5>
                            <p class="card-text">View your profile.</p>
                            <a href="@Url.Action("GetEventOrganizer", "EventOrganizer")" class="btn btn-primary btn-block">View Profile</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm border-0 rounded-lg">
                        <div class="card-body text-center">
                            <h5 class="card-title">Update Profile</h5>
                            <p class="card-text">Update your profile.</p>
                            <a href="@Url.Action("UpdateEventOrganizer", "EventOrganizer")" class="btn btn-primary btn-block">Update Profile</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm border-0 rounded-lg">
                        <div class="card-body text-center">
                            <h5 class="card-title">Delete Account</h5>
                            <p class="card-text">Delete your account.</p>
                            <a href="@Url.Action("DeleteEventOrganizer", "EventOrganizer")" class="btn btn-danger btn-block">Delete Account</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
