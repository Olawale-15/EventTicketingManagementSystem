
@{
    ViewData["Title"] = "Admin Dashboard";
}

<style>
    h2 {
        font-weight: 700;
        color: #333;
    }

    .card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        background-color: #f8f9fa;
        border-radius: 15px;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
        }

    .card-title {
        font-weight: 600;
        color: #007bff;
    }

    .card-text {
        color: #555;
    }

    .btn-block {
        font-size: 1.1rem;
        padding: 10px;
        border-radius: 30px;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
        }

    .container {
        max-width: 1200px;
    }

    .mb-3 {
        margin-bottom: 1rem !important;
    }

    .text-right {
        text-align: right;
    }
</style>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2>Admin Dashboard</h2>
                <form asp-action="LogOut" asp-controller="Authentication" method="post">
                    <button type="submit" class="btn btn-danger btn-lg">Logout</button>
                </form>
            </div>
            <hr />
            <div class="row">
                <div class="col-md-4 mb-3">
                    <div class="card shadow-sm border-0 rounded-lg">
                        <div class="card-body text-center">
                            <h5 class="card-title">Manage Events</h5>
                            <p class="card-text">View and manage all events.</p>
                            <a href="@Url.Action("GetAllEventss", "Event")" class="btn btn-primary btn-block">Manage Events</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="card shadow-sm border-0 rounded-lg">
                        <div class="card-body text-center">
                            <h5 class="card-title">Manage Event Organizers</h5>
                            <p class="card-text">View and manage event organizers.</p>
                            <a href="@Url.Action("GetAllEventOrganizers", "EventOrganizer")" class="btn btn-primary btn-block">Manage Event Organizers</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="card shadow-sm border-0 rounded-lg">
                        <div class="card-body text-center">
                            <h5 class="card-title">Manage Attendees</h5>
                            <p class="card-text">View and manage attendees.</p>
                            <a href="@Url.Action("GetAllAttendees", "Attendee")" class="btn btn-primary btn-block">Manage Attendees</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="card shadow-sm border-0 rounded-lg">
                        <div class="card-body text-center">
                            <h5 class="card-title">My Wallet</h5>
                            <p class="card-text">View and manage your wallet.</p>
                            <a href="@Url.Action("GetWallet", "Wallet")" class="btn btn-primary btn-block">My Wallet</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
